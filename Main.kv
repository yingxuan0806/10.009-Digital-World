<Screen1>:
    name: "main screen"
    canvas.before:
 
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Graduate-Housing.jpg'
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint: (.4, 1)
            pos_hint: {'x':.6,'y':0}
            Label:
                background_color: [.1,.1,.1,.7]
                text: 'welcome. \n please select your block'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Block 55'
                    background_color: [.1,.1,.1,.7]
                    on_press: app.root.current = '55'
                Button:
                    text: 'Block 57'
                    background_color: [.1,.1,.1,.7]
                    on_press: app.root.current = '55'
                Button:
                    text: 'Block 59'
                    background_color: [.1,.1,.1,.7]
                    on_press: app.root.current = '55'
            
            


